#app
    font-size: 14px
    width: 100%
    height: 100%
    overflow: hidden
    /*==swipe的点==*/
    .vux-slider > .vux-indicator > a > .vux-icon-dot.active, .vux-slider .vux-indicator-right > a > .vux-icon-dot.active
        background-color: #FF3B3B
    .vux-actionsheet-menu-default
        width: 100%
        height: 38px
        line-height: 38px
        padding: 0
    .vux-header
        background-color: #fff !important
        border-bottom: 1px solid #dcdcdc
        z-index: 99
        .vux-header-title
            color: #333 !important
        .vux-header-left
            .left-arrow:before
                border: 1px solid #656565 !important
                border-width: 2px 0 0 2px !important
    .vux-loading
        position: absolute
        z-index: 1000
    .vux-popup-picker-container
        width: 100%
    ::-webkit-scrollbar
        width: 0px